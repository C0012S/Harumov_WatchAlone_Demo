<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SearchActivity"
    android:background="#FFFEF3">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MOV"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:fontFamily="@font/dohyun"
        android:textSize="25dp"
        android:textStyle="bold"
        android:padding="15dp"
        android:textColor="#FFFFFF"
        android:background="#264713"
        android:shadowRadius="2.0"
        android:shadowDx="2.0"
        android:shadowDy="2.0"
        android:shadowColor="#A2A19D"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/imageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/search" />

        <EditText
            android:id="@+id/search_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:background="@drawable/searchview_round"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_weight="5"
        android:id="@+id/recylcerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/watch_alone_enter_button"
        android:layout_weight="0.3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="@font/jua"
        android:layout_margin="10dp"
        android:text="혼자보기 입장"
        android:textSize="20sp"/>

</LinearLayout>